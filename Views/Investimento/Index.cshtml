@model List<InvestimentoViewModel>

@{
    ViewData["Title"] = "Investimentos";
}

<div class="container p-4">
    <div class="row">
        <div class="col-md-12">
            <h3 class="p-4">Todos os investimentos</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <form class="d-flex" asp-controller="Investimento" asp-action="Index">
                <input name="nomeBusca" class="form-control me-1" type="search" placeholder="Pesquisar" aria-label="Pesquisar" />
                <button class="btn btn-primary" type="submit">Pesquise por nome</button>
            </form>

        </div>
        <div class="col-md-6">
            <a asp-action="Index" class="text-dark">Voltar para lista completa</a>
        </div>
    </div>


    <div class="row">
        <div class="col-md-12">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nome</th>
                        <th scope="col">Tipo</th>
                        <th scope="col">Valor</th>
                        <th scope="col">Data</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var investimento in Model)
                    {
                        <tr>
                            <th scope="row">@investimento.InvestimentoId</th>
                            <td>@investimento.Nome</td>
                            <td>@investimento.Tipo</td>
                            <td>@investimento.Valor</td>
                            <td>@investimento.DataInvestimento</td>
                            <td>
                                <a class="btn btn-warning"
                                   asp-controller="Investimento"
                                   asp-action="Editar"
                                   asp-route-id="@investimento.InvestimentoId">Editar</a>
                            </td>
                            <td>
                                <a class="btn btn-danger"
                                   asp-controller="Investimento"
                                   asp-action="Deletar"
                                   asp-route-id="@investimento.InvestimentoId"
                                   onclick="return confirm('Tem certeza que quer deletar esse investimento?')">Deletar</a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>